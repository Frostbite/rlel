<Window x:Class="rlel.Authenticator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rlel"
        mc:Ignorable="d"
        Title="Authenticator" Height="300" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <TextBlock Text="You have Google Authenticator Enabled. Please enter the verification code generated by the authenticator app" Width="200" Height="200" Margin="46,45,46,24" TextWrapping="Wrap" RenderTransformOrigin="0.498,0.339"/>
        <TextBox Name="authCode" Height="27" Width="200" KeyDown="authCode_KeyDown"></TextBox>
        <Button Height="35" Width="60" Content="Submit" Click="submit_Click" Name="submit" Margin="119,171,113,63"></Button>
        <CheckBox Name="DontAsk" Height="20" Width="160" Content="Don't ask for codes again" Margin="68,211,64,38" ></CheckBox>
    </Grid>
</Window>
