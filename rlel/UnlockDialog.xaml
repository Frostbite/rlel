<Window x:Class="rlel.UnlockDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rlel"
        mc:Ignorable="d"
        Title="" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="200" Width="300">
    <Grid>
        <TextBlock Name="prompt" Text="Enter your password to unlock rlel" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="4,10,0,0" ></TextBlock>
        <Button Name="Submit" Click="Submit_Click" Content="Submit" Height="27" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="95,0,99,78"></Button>
        <PasswordBox Name="Pass" Width="250" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="21,0,0,110" Visibility="Visible" KeyDown="Pass_KeyDown"/>
        <Button Name="Reset" Width="125" Height="27" HorizontalAlignment="Center" VerticalAlignment="Top" Content="I forgot my password" Margin="0,105,0,0" Click="Reset_Click"></Button>
    </Grid>
</Window>
