<Window x:Class="rlel.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rlel"
        mc:Ignorable="d"
        Title="Update Available" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Grid>
        <TextBlock Text="An update is available at" TextAlignment="Center" Margin="10,15,10,230"/>
        <TextBlock Margin="0,40,0,211" Height="20" TextAlignment="Center" RenderTransformOrigin="0.492,-3.013"> <Hyperlink RequestNavigate="Hyperlink_RequestNavigate"  NavigateUri="https://github.com/Frosty-nee/rlel/releases/latest">https://github.com/Frosty-nee/rlel/releases/latest</Hyperlink></TextBlock>
        <Button Name="OK" Content="OK" Click="OK_Click" Width="75" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="50"></Button>

    </Grid>
</Window>
